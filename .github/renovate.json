{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "description": "THIS FILE WAS AUTOMATICALLY GENERATED, PLEASE DO NOT EDIT.",
    "prHeader": "Update Request | Renovate Bot",
    "extends": [
        ":dependencyDashboard",
        ":gitSignOff",
        ":semanticCommitScopeDisabled",
        "schedule:earlyMondays"
    ],
    "customManagers": [
        {
            "customType": "regex",
            "versioningTemplate": "{{#if versioning}}{{versioning}}{{else}}semver{{/if}}",
            "managerFilePatterns": [
                "/internal/config/constants.go/"
            ],
            "matchStrings": [
                "\\/\\/\\s+renovate: datasource=(?<datasource>.*?)(?:\\s+extractVersion=(?<extractVersion>.+?))?(?:\\s+versioning=(?<versioning>.+?))?\\s+depName=(?<depName>.+?)?\\s.*Version\\s+=\\s+\\\"(?<currentValue>.+?)\\\"(?:\\s.*Ref\\s+=\\s+\\\"(?<currentDigest>.+?)\\\")?"
            ]
        }
    ],
    "packageRules": [
        {
            "groupName": "dependencies",
            "matchUpdateTypes": [
                "major",
                "minor",
                "patch",
                "pin",
                "digest"
            ]
        },
        {
            "enabled": false,
            "matchFileNames": [
                "Dockerfile"
            ]
        },
        {
            "enabled": false,
            "matchFileNames": [
                ".github/workflows/*.yaml"
            ]
        },
        {
            "versioning": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)\\.?(?<patch>\\d+)?$",
            "matchPackageNames": [
                "golang/go"
            ]
        },
        {
            "enabled": false,
            "matchFileNames": [
                "internal/output/dockerfile/dockerfile_test.go"
            ]
        },
        {
            "allowedVersions": "/^24\\.\\d+\\.\\d+-alpine$/",
            "matchDatasources": [
                "docker"
            ],
            "matchPackageNames": [
                "node"
            ]
        }
    ],
    "separateMajorMinor": false
}
